/* pages/shopping/shoping.wxss */
/* 头部图片 */
.title-pic{
    width: 452rpx;
    height: 275rpx;
    margin: 0 auto;
    margin-top: 40rpx;
    border-radius: 20rpx;
    -webkit-box-shadow:0px 0px 20px #9C9C9C;
    box-shadow:0px 0px 20px #9C9C9C;
}
.title-pic image{
    height: 300rpx;
    width: 452rpx;
    border-radius: 20rpx;
}
.list-pic{
    height: 150rpx;
    width: 670rpx;
    white-space: nowrap;
    /* display: flex; */
    margin-left: 40rpx;
    margin-top: 45rpx;
    /* overflow: hidden; */
}
.picture{
    width: 145rpx;
    height: 90rpx;
    display: inline-block;
    padding: 0 17rpx;
    border-radius: 10rpx;
}
.picture image{
    width: 145rpx;
    height: 90rpx;
    border-radius: 10rpx;
}
.picture .check{
    border: 5rpx solid #1eb275;
}
.picture .goupic{
    width: 35rpx;
    height: 35rpx;
    position: relative;
    top: -64rpx;
    left: -20rpx;
}
/* 选择商品 */
.goods {
  font-size: 30rpx;
  color: #494949;
  display: block;
  margin-top: 40rpx;
  margin-left: 40rpx;
}
.item {
  width: 586rpx;
  height: 146rpx;
  /* background-color: red; */
  margin: 0 auto;
  position: relative;
  margin-top: 50rpx;
  overflow: hidden;
  border-bottom: 2rpx solid #e1e1e1;
}
.pic {
  width: 120rpx;
  height: 146rpx;
}
.item image {
  width:100%;
  height: 100%;
}
.item .item_name {
  position: absolute;
    top: 5rpx;
    left: 150rpx;
    font-size: 35rpx;
}
.item .item_price {
  position: absolute;
    top: 70rpx;
    left: 150rpx;
    font-size: 30rpx;
}
.item .add {
    width: 38rpx;
    height: 38rpx;
    position: absolute;
    top: 70rpx;
    right:20rpx ;
    border-radius: 50%;
}
.item .del {
    width: 38rpx;
    height: 38rpx;
    position: absolute;
    top: 70rpx;
    right:140rpx;
    border-radius: 50%;
    
}
.item .number {
    position: absolute;
    top: 65rpx;
    right:90rpx;
    width:30rpx;
    text-align: center;
}
.xiabiao{
    width: 50rpx;
    height: 5rpx;
    position: absolute;
    background-color: #299e6d;
    top: 115rpx;
    right: 75rpx;
}
 .out {
  display: none;
}

/* 孙建淳 商品信息 */
.background {
  /* display: none; */
 position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 99;
    background: rgba(0,0,0,0.4);
}
.show_message {
  width: 750rpx;
  height: 900rpx;
  background-color: rgba(255, 255, 255,1);
  /* background-color: white; */
  position: absolute;
  bottom: 0;
  border-top-left-radius: 10px;
  border-top-right-radius: 10px;
}
.show_message .msg_pic {
  width: 260rpx;
  height: 260rpx;
  position: absolute;
  top: -130rpx;
  left: 245rpx;
  background-color: white;
  border-radius: 50%;
}
.show_message .msg_pic image {
  display: block;
  width: 80%;
  height: 80%;
  margin: 0 auto;
  vertical-align: middle;
}
.show_message .msg_close {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  left: 15px;
  top: 15px;
}
.show_message .msg_close image {
  display: block;
  width: 100%;
  height: 100%;
}
.show_message .content_msg {
  width: 750rpx;
  height: 700rpx;
  /* background-color: yellow; */
  position: absolute;
  bottom: 0px;
  left: 0px;
}
.drink_inSeason {
  display: block;
  font-size: 40rpx;
  margin-top: 10px;
  margin-bottom: 5px;
}
.price {
  display: block;
  font-size: 40rpx;
  margin-top: 8px;
  margin-bottom: 10px;
}
.content_msg_title {
  width: 690rpx;
  height: 180rpx;
  border-bottom: 1px solid gray;
  margin-left: 30rpx;
}
::-webkit-scrollbar {
  width: 5px;
  height: 100rpx;
  color: gray;
}
.content_msg_text {
  margin: 30rpx;
  font-size: 30rpx;
}
.allow_stores {
  color: gray;
}
.all_stores {
  color: green;
  padding-left: 25rpx;
}
.using_time_part {
  color: gray;
}
.use_information {
  color: gray;
}
.content_msg_text .stores {
  padding-bottom: 25rpx;
}
.content_msg_text .theTime {
  padding-bottom: 25rpx;
}
.content_msg_text .theTime .using_time {
  padding-left: 25rpx;
}
.information {
  display: flex;
  font-size: 26rpx;
}
.information .use_information_text {
  flex: 8;
 display: flex;
 flex-direction:column;
}
.information .all_use_information_text {
  margin-bottom: 20rpx;
  /* color: #dadada; */
}
.use_information_text {
  /* padding-left: 25rpx; */
} 
.information .use_information {
  flex: 2;
}
/* 购买栏 */
.foot {
  position: fixed;
  bottom: 0;
  width: 100%;
    height: 155rpx;
    background-color: #fff;
    border-top: 1px solid #e1e1e1;
}
.foot .foot_number {
  position: absolute;
    font-size: 25rpx;
    color: #c3c3c3;
    top: 20rpx;
    left: 65rpx;
}
.foot .count {
  position: absolute;
    top: 60rpx;
    left: 55rpx;
    font-size: 30rpx;
}
.foot .shopping {
    width: 196rpx;
    height: 68rpx;
    background-color: #4aa668;
    border-radius: 34rpx;
    line-height: 68rpx;
    color: #fff;
    position: absolute;
    top: 20rpx;
    right: 50rpx;
    text-align: center;
}
